# Multi-Agent Resume Optimizer Configuration
# Copy this file to .env and fill in your actual API keys

# Groq API Configuration (Required)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# LangChain Configuration (Optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=resume-optimizer

# Application Configuration
APP_TITLE=Multi-Agent Resume Optimizer
APP_DESCRIPTION=AI-powered resume optimization with 90%+ ATS score guarantee
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=json,txt

# Workflow Configuration
DEFAULT_TEMPLATE_PATH=templates/resume_template.tex
DEFAULT_OUTPUT_DIR=output
DEFAULT_RAG_DB_PATH=data/profiles
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true

# UI Configuration
THEME_PRIMARY_COLOR=#FF6B6B
THEME_BACKGROUND_COLOR=#FFFFFF
THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6
THEME_TEXT_COLOR=#262730

# Performance Configuration
MAX_CONCURRENT_WORKFLOWS=3
WORKFLOW_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600

# Security Configuration
ALLOWED_DOMAINS=linkedin.com,indeed.com,glassdoor.com,monster.com,ziprecruiter.com
MAX_REQUESTS_PER_HOUR=100
